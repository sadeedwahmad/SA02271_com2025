<% if user_signed_in? %>
<%= form_with(model: profile, local: true) do |form| %>
  <% if profile.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(profile.errors.count, "error") %> prohibited this profile from being saved:</h2>

      <ul>
      <% profile.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= form.label :username %>
    <%= form.text_field :name,:required => true %>
  </div>

  <div class="field">
    <%= form.label :email %>
    <%= form.text_field :email, value: current_user.email ,:required => true%>
  </div>

  <div class="field">
    <%= form.hidden_field :user_id , value: current_user.id,:required => true%>
  </div>

  <div class="field">
    <%= form.label :image %>
    <%= form.file_field :picture %>
  </div>


  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
<%end%>